<!DOCTYPE html>
<html>
  <head>
    <title>Payment Gateway</title>
  </head>
  <body>
  <div>
    <form action="/paymentDetails" method="post">
        <label for="email">Email:</label>
        <input type="text" id="email" name="email" required><br><br>
        
        <label for="card number">card number:</label>
        <input type="text" id="card number" name="card number" rows="4" cols="50" required><br><br>
        
        <input type="month" id="date" name="date">
        <input type="text" id="cvc" name="cvc" placeholder="CVC" required>
        <br></br>
        
        <input type="checkbox" id="rememberMe" name="rememberMe" value="true">
        <label for="rememberMe">Remember Me</label><br>

        <input type="submit" value="Pay">
      </form>
      </div>  
  </body>
</html>

