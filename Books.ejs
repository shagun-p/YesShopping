<style>
    .container {
	width: 80%;
	margin: 0 auto;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.product-image img {
	max-width: 100%;
	height: auto;
}

.product-details {
	flex: 1;
	margin-left: 50px;
}

.product-details h1 {
	font-size: 2rem;
	margin-bottom: 10px;
}

.price {
	font-size: 1.5rem;
	margin-bottom: 10px;
	color: #c00;
}

.description {
	margin-bottom: 20px;
}
.full {
      display: block;
	  width: 100%;
   }
form {
	display: flex;
	align-items: center;
}

label {
	margin-right: 10px;
}

input[type="number"] {
	width: 50px;
}

input[type="submit"] {
	background-color: #c00;
	color: #fff;
	padding: 10px 20px;
	border: none;
	cursor: pointer;
}

input[type="submit"]:hover {
	background-color: #ff0000;

}
</style>
<!DOCTYPE html>
<html>
<head>
	<title>Product Page</title>
	<link rel="stylesheet" type="text/css" href="style.css">
</head>
<body>
    <style>
        #backButtn {
          position: fixed;
          top: 0;
          left: 0;
        }
      </style>
    <form action="/searchBooks">
        <input type="text" name="searchTerm" placeholder="Search for Books...">
        <button type="submit">Search</button>
    </form>
</head>
	    <ul>
        <% books.forEach((book) => { %>
          <li>
            <h2><%= book.name %></h2>
            <p><%= book.description %></p>
            <p>$<%= book.price %></p>
			<p><img src="<%= book.imageAddress %>" alt=""></p>
			<form action="/add-to-cart" method="post">
				<input type="hidden" name="productId" value="<%= book.id %>">
				<input type="hidden" name="productName" value="<%= book.name %>">
				<input type="hidden" name="productImage" value="<%= book.imageAddress %>">
				<input type="hidden" name="productPrice" value="<%= book.price %>">
				<input type="number" name="quantity" value="1" min="1">
				<button type="submit">Add to cart</button>
			  </form>
			  <form action="/add-to-wishlist" method="post">
				<input type="hidden" name="productId" value="<%= book.id %>">
				<input type="hidden" name="productName" value="<%= book.name %>">
				<input type="hidden" name="productImage" value="<%= book.imageAddress %>">
				<input type="hidden" name="productPrice" value="<%= book.price %>">
				<input type="number" name="quantity" value="1" min="1">
				<button type="submit">Add to wishlist</button>
			  </form>			  
          </li>
        <% }) %>
      </ul>
</body>
</html>